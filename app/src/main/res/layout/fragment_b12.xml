<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/q_b12"
        android:text="သင့္တြင္ (ေမြးစား သားသမီးႏွင့္ အိမ္ေထာင္ဖက္ပါ သားသမီး အပါအဝင္) သား၊သမီး အရင္း ဘယ္ႏွေယာက္ရွိပါသလဲ။
       [မရွိပါက 0 ကို ျဖည့္ပါ။]"/>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/q_b12"
        android:rowCount="4"
        android:columnCount="3"
        >

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text=""/>
        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Sons"/>
        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:text="Daughters"/>
        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="သား၊ သမီး အရင္း"/>
        <com.xavey.proto.control.ProtoEditText
            android:id="@+id/et_b12_1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:inputType="number"
            android:hint="0" />

        <com.xavey.proto.control.ProtoEditText
            android:id="@+id/et_b12_1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:inputType="number"
            android:hint="0" />

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="ေမြးစား သား၊ သမီး"/>
        <com.xavey.proto.control.ProtoEditText
            android:id="@+id/et_b12_2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:inputType="number"
            android:hint="0" />
        <com.xavey.proto.control.ProtoEditText
            android:id="@+id/et_b12_2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:inputType="number"
            android:hint="0" />

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="ေျဖဆိုသူမွ ေစာင့္ေရွာက္ခဲ့ေသာ အိမ္ေထာင္ဖက္ပါ သားသမီး"/>
        <com.xavey.proto.control.ProtoEditText
            android:id="@+id/et_b12_3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:inputType="number"
            android:hint="0" />
        <com.xavey.proto.control.ProtoEditText
            android:id="@+id/et_b12_3_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:inputType="number"
            android:hint="0" />

    </GridLayout>


</RelativeLayout>
</ScrollView>