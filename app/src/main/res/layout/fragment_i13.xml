<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/q_i13"
        android:text="I13. အဓိက ကူညီေပးသူအျပင္ အျခားမည္သူက သင့္အိမ္ေထာင္ဖက္ကို ကူညီေပးပါသလဲ။
(အေျဖတစ္ခုထက္ပိုေရြးရန္ ခြင့္ျပဳသည္ - သက္ဆိုင္သည့္အေျဖမ်ားကို ဝုိင္းပါ။)   "/>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/q_i13"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:id="@+id/rg_i13">
        <com.xavey.proto.control.ProtoCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_i13_1"
            android:text="ေျဖဆိုသူ" />
        <com.xavey.proto.control.ProtoCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_i13_2"
            android:text="သား" />
        <com.xavey.proto.control.ProtoCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_i13_3"
            android:text="သမီး" />
        <com.xavey.proto.control.ProtoCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_i13_4"
            android:text="ေျမး" />
        <com.xavey.proto.control.ProtoCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_i13_5"
            android:text="အျခား" />
        <com.xavey.proto.control.ProtoCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_i13_6"
            android:text="မည္သူမွမရွိပါ→ ေမးျမန္းမႈကို အဆံုးသတ္ပါ။" />
    </LinearLayout>
    <com.xavey.proto.control.ProtoEditText
        android:id="@+id/et_i13_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp"
        android:layout_alignBottom="@+id/rg_i13"
        android:layout_toRightOf="@+id/rg_i13"
        android:hint="ေဖာ္ျပပါ" />
</RelativeLayout>
</ScrollView>