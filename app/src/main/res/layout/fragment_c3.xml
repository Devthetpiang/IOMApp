<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/q_c3"
        android:text="မည္သည့္ပစၥည္းကို အဓိကသံုးၿပီး ေခါင္မိုးကို ျပဳလုပ္ထားပါသလဲ။
(အေျဖတစ္ခုထက္ပိုေရြးခြင့္ျပဳသည္ - သက္ဆိုင္ေသာ အေျဖမ်ားအားလံုးကို ဝိုင္းပါ။)"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/q_c3"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:id="@+id/rg_c3">
        <com.xavey.proto.control.ProtoCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_c3_1"
            android:text="သက္ကယ္/ ေကာက္ရိုး/ ဓနိ/ သစ္ရြက္" />
        <com.xavey.proto.control.ProtoCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_c3_2"
            android:text="ဝါး" />
        <com.xavey.proto.control.ProtoCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_c3_3"
            android:text="သြပ္မိုး" />
        <com.xavey.proto.control.ProtoCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_c3_4"
            android:text="အုတ္မိုး" />
        <com.xavey.proto.control.ProtoCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_c3_5"
            android:text="အျခား" />
    </LinearLayout>
    <com.xavey.proto.control.ProtoEditText
        android:id="@+id/et_c3_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rg_c3"
        android:layout_toRightOf="@+id/rg_c3"
        android:hint="ေဖာ္ျပပါ" />
</RelativeLayout>
</ScrollView>