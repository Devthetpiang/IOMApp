<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/q_i8"
        android:text="I8. အဓိက ကူညီေပးသူအျပင္ အျခားကူညီသူရွိပါသလား။
(အေျဖတစ္ခုထက္ပိုေရြးခြင့္ ျပဳပါသည္။ - သက္ဆိုင္သည္မ်ားကို ဝုိင္းပါ။) "/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/q_i8"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:id="@+id/rg_i8">
        <com.xavey.proto.control.ProtoCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_i8_1"
            android:text="အိမ္ေထာင္ဖက္" />
        <com.xavey.proto.control.ProtoCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_i8_2"
            android:text="သား" />
        <com.xavey.proto.control.ProtoCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_i8_3"
            android:text="သမီး" />
        <com.xavey.proto.control.ProtoCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_i8_4"
            android:text="ေျမး" />
        <com.xavey.proto.control.ProtoCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_i8_5"
            android:text="အျခား" />
        <com.xavey.proto.control.ProtoCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_i8_6"
            android:text="မည္သူမွ မကူညီပါ။" />
    </LinearLayout>
    <com.xavey.proto.control.ProtoEditText
        android:id="@+id/et_i8_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rg_i8"
        android:layout_below="@+id/rg_i8"
        android:hint="ေဖာ္ျပပါ" />
</RelativeLayout>
</ScrollView>