<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/q_d9"
        android:text="သင့္အိမ္ေထာင္ဖက္ အလုပ္မလုပ္ရျခင္း၏ အဓိက အေၾကာင္းရင္းကို ေျပာျပပါ။
[ေမးျမန္းသူအတြက္ ညႊန္ၾကားခ်က္ : ယခုေမးခြန္းၿပီးပါက Section E ကို သြားပါ။]"/>

    <RadioGroup
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/q_d9"
        android:paddingLeft="20dp"
        android:id="@+id/rg_d9">
        <com.xavey.proto.control.ProtoRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_d9_1"
            android:text="ေျမး(မ်ား)ကို ေစာင့္ေရွာက္သည့္ တာဝန္ယူေနရျခင္း" />
        <com.xavey.proto.control.ProtoRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_d9_2"
            android:text="က်န္းမာေရး အားနည္းျခင္း/ အလုပ္လုပ္ရန္ အင္အားမရွိျခင္း သို႔မဟုတ္ အသက္အရြယ္ အိုမင္းျခင္း" />
        <com.xavey.proto.control.ProtoRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_d9_3"
            android:text="အၿငိမ္းစားယူထားျခင္း" />
        <com.xavey.proto.control.ProtoRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_d9_4"
            android:text="လုပ္ရန္ အလုပ္မရွိျခင္း" />
        <com.xavey.proto.control.ProtoRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_d9_5"
            android:text="သင္ အလုပ္လုပ္ေနေသာေၾကာင့္ အလုပ္လုပ္ရန္ မလိုအပ္ျခင္း" />
        <com.xavey.proto.control.ProtoRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_d9_6"
            android:text="သင္ႏွင့္ သင္၏ အိမ္ေထာင္ဖက္မွာ အျခားေထာက္ပံ့မႈ ရရွိေနေသာေၾကာင့္ အလုပ္လုပ္ရန္ မလုိအပ္ပါ။" />
        <com.xavey.proto.control.ProtoRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rg_d9_7"
            android:text="အျခား" />
    </RadioGroup>
    <com.xavey.proto.control.ProtoEditText
        android:id="@+id/et_d9_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rg_d9"
        android:layout_toRightOf="@+id/rg_d9"
        android:hint="ေဖာ္ျပပါ" />
</RelativeLayout>
</ScrollView>