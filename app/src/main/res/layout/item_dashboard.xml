<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">

    <TextView android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="loading..."
        android:singleLine="true"
        android:ellipsize="end"
        android:padding="5dp"
        android:textSize="15dp"
        />

    <TextView android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:singleLine="true"
        android:layout_toRightOf="@id/tvCount"
        android:layout_toEndOf="@id/tvCount"
        android:layout_alignBaseline="@+id/tvCount"
        android:clickable="false"
        android:padding="0dp"
        />

    <TextView android:id="@+id/tvGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="loading..."
        android:singleLine="true"
        android:layout_toRightOf="@id/tvStatus"
        android:layout_toEndOf="@id/tvStatus"
        android:layout_alignBaseline="@+id/tvStatus"
        android:clickable="false"
        android:padding="5dp"
        android:textSize="15dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSync"
        android:layout_toRightOf="@id/tvGroup"
        android:layout_toEndOf="@id/tvGroup"
        android:layout_alignBaseline="@+id/tvGroup"
        android:padding="10dp"
        android:textSize="15dp"
        android:text="Upload"/>



</RelativeLayout>